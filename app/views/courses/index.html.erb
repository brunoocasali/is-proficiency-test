<div class="page-header">
  <h2><%= t '.title' %></h2>
  <div class="text-right">
    <%= link_to raw('<i class="fa fa-plus fa-2x"></i>'), new_course_path,
     class: 'btn btn-default' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.description') %></th>
        <th><%= t('.status') %></th>
        <th colspan="3"> <%= t('options') %> </th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.status_humanized %></td>
        <td>
          <%= link_to raw('<i class="fa fa-eye fa-2x"></i>'), course,
              class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-pencil fa-2x"></i>'),
              edit_course_path(course),
              class: 'btn btn-sm btn-primary center-block white' %>
        </td>
        <td>
          <%= link_to raw('<i class="fa fa-trash fa-2x"></i>'),
              course, method: :delete, data: { confirm: 'VocÃª tem certeza?' },
              class: 'btn btn-danger center-block white btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @courses %>
  </div>  
</div>
