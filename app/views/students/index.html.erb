<div class="page-header">
  <h2><%= t('.title') %></h2>
  <div class="text-right">
    <%= link_to raw('<i class="fa fa-plus fa-2x"></i>'), new_student_path,
    class: 'btn btn-default' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.status') %></th>
        <th><%= t('.register_number') %></th>
        <th colspan="3"> <%= t('options') %> </th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.status_humanized %></td>
        <td><%= student.register_number %></td>
        <td>
          <%= link_to raw('<i class="fa fa-eye fa-2x"></i>'), student,
            class: 'btn btn-sm btn-primary center-block white' %>
          </td>
          <td>
            <%= link_to raw('<i class="fa fa-pencil fa-2x"></i>'),
              edit_student_path(student),
              class: 'btn btn-sm btn-primary center-block white' %>
          </td>
          <td>
            <%= link_to raw('<i class="fa fa-trash fa-2x"></i>'),
              student, method: :delete, data: { confirm: 'VocÃª tem certeza?' },
              class: 'btn btn-danger center-block white btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @students %>
  </div>
</div>
