<div class="page-header">
  <h2><%= t('.title') %></h2>
  <div class="text-right">
    <%= link_to raw('<i class="fa fa-plus fa-2x"></i>'), new_classroom_path,
    class: 'btn btn-default' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= t('.student') %></th>
        <th><%= t('.course') %></th>
        <th><%= t('.entry_at') %></th>
        <th colspan="3"> <%= t('options') %> </th>
      </tr>
    </thead>

    <tbody>
      <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.student.name %></td>
        <td><%= classroom.course.name %></td>
        <td><%= classroom.entry_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= link_to raw('<i class="fa fa-eye fa-2x"></i>'), classroom,
            class: 'btn btn-sm btn-primary center-block white' %>
          </td>
          <td>
            <%= link_to raw('<i class="fa fa-pencil fa-2x"></i>'),
            edit_classroom_path(classroom),
            class: 'btn btn-sm btn-primary center-block white' %>
          </td>
          <td>
            <%= link_to raw('<i class="fa fa-trash fa-2x"></i>'),
            classroom, method: :delete, data: { confirm: 'VocÃª tem certeza?' },
            class: 'btn btn-danger center-block white btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @classrooms %>
  </div>  
</div>
