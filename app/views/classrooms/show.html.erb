<div class="col-md-offset-2 col-md-8">
  <h2><%= t '.title', id: @classroom.id %></h2>
  <br />

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade in text-center" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <strong>OK: </strong> <%= notice %>
    </div>
  <% end %>

  <p class="col-md-12">
    <strong><%= t('.student') %>:</strong>
    <%= @classroom.student.name %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.course') %>:</strong>
    <%= @classroom.course.name %>
  </p>

  <p class="col-md-12">
    <strong><%= t('.entry_at') %>:</strong>
    <%= @classroom.entry_at.strftime("%d/%m/%Y") %>
  </p>

  <div class="form-group col-md-12">
    <%= link_to t('links.edit'), edit_classroom_path(@classroom),
    class: 'btn btn-info btn-block' %>
  </div>

  <div class="form-group col-md-12">
    <%= link_to t('links.back'), classrooms_path,
     class: 'btn btn-default btn-block' %>
  </div>

</div>
